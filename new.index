<body>
    <!-- Notification System -->
    <div id="notification" class="notification hidden"></div>
    <!-- Login Page -->
    <div id="loginPage" class="page active">
        <div class="login-container">
            <div class="login-card">
                <h1 class="login-title">Student Tracker</h1>
                <p class="login-subtitle">Attendance & Performance Management System</p>
                <div class="login-tabs">
                    <button class="tab-btn active" data-tab="faculty">Faculty Login</button>
                    <button class="tab-btn" data-tab="student">Student Login</button>
                </div>
                <!-- Faculty Login Form -->
                <form id="facultyLoginForm" class="login-form active">
                    <div class="form-group">
                        <label for="facultyUsername">Username</label>
                        <input type="text" id="facultyUsername" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="facultyPassword">Password</label>
                        <input type="password" id="facultyPassword" class="form-control" required>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Login as Faculty</button>
                </form>
                <!-- Student Login Form -->
                <form id="studentLoginForm" class="login-form">
                    <div class="form-group">
                        <label for="studentUsername">Username</label>
                        <input type="text" id="studentUsername" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="studentPassword">Password</label>
                        <input type="password" id="studentPassword" class="form-control" required>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Login as Student</button>
                </form>
            </div>
        </div>
    </div>
    <!-- Faculty Portal -->
    <div id="facultyPortal" class="page">
        <!-- Top Navigation -->
        <nav class="topnav">
            <div class="nav-content">
                <div class="nav-brand">Student Tracker - Faculty Portal</div>
                <button class="btn btn-secondary btn-sm" id="facultyLogout">Logout</button>
            </div>
        </nav>
        <div class="portal-container">
            <!-- Sidebar -->
            <aside class="sidebar">
                <ul class="nav-menu">
                    <li><a href="#" class="nav-link active" data-view="facultyDashboard">Dashboard</a></li>
                    <li><a href="#" class="nav-link" data-view="markAttendance">Mark Attendance</a></li>
                    <li><a href="#" class="nav-link" data-view="enterPerformance">Enter Performance</a></li>
                    <li><a href="#" class="nav-link" data-view="viewReports">View Reports</a></li>
                    <li><a href="#" class="nav-link" data-view="studentManagement">Student Management</a></li>
                </ul>
            </aside>
            <!-- Main Content Area -->
            <main class="main-content">
                <!-- Faculty Dashboard -->
                <div id="facultyDashboard" class="view active">
                    <div class="breadcrumb">Home / Dashboard</div>
                    <h2>Faculty Dashboard</h2>
                    <div class="stats-grid">
                        <div class="stat-card">
                            <div class="stat-value" id="totalStudents">0</div>
                            <div class="stat-label">Total Students</div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-value" id="todayPresent">0</div>
                            <div class="stat-label">Present Today</div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-value" id="todayAbsent">0</div>
                            <div class="stat-label">Absent Today</div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-value" id="todayLate">0</div>
                            <div class="stat-label">Late Today</div>
                        </div>
                    </div>
                    <div class="dashboard-sections">
                        <div class="section-card">
                            <h3>Recent Performance</h3>
                            <div id="recentPerformance"></div>
                        </div>
                        <div class="section-card">
                            <h3>Quick Actions</h3>
                            <div class="quick-actions">
                                <button class="btn btn-primary" data-view="markAttendance">Mark Attendance</button>
                                <button class="btn btn-primary" data-view="enterPerformance">Enter Performance</button>
                                <button class="btn btn-secondary" data-view="viewReports">View Reports</button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Mark Attendance -->
                <div id="markAttendance" class="view">
                    <div class="breadcrumb">Home / Mark Attendance</div>
                    <h2>Mark Attendance</h2>
                    <form id="attendanceForm" class="attendance-form">
                        <div class="form-row">
                            <div class="form-group">
                                <label for="attendanceDate">Date</label>
                                <input type="date" id="attendanceDate" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label for="attendanceClass">Class/Section</label>
                                <select id="attendanceClass" class="form-control" required>
                                    <option value="Computer Science A">Computer Science A</option>
                                </select>
                            </div>
                        </div>
                        <div class="attendance-table-wrapper">
                            <table class="data-table">
                                <thead>
                                    <tr>
                                        <th>Roll No.</th>
                                        <th>Student Name</th>
                                        <th>Present</th>
                                        <th>Absent</th>
                                        <th>Late</th>
                                        <th>Excused</th>
                                    </tr>
                                </thead>
                                <tbody id="attendanceTableBody"></tbody>
                            </table>
                        </div>
                        <div class="attendance-summary" id="attendanceSummary"></div>
                        <button type="submit" class="btn btn-primary">Submit Attendance</button>
                    </form>
                </div>
                <!-- Enter Performance -->
                <div id="enterPerformance" class="view">
                    <div class="breadcrumb">Home / Enter Performance</div>
                    <h2>Enter Performance</h2>
                    <form id="performanceForm" class="performance-form">
                        <div class="form-group">
                            <label for="perfStudent">Select Student</label>
                            <select id="perfStudent" class="form-control" required></select>
                        </div>
                        <div class="form-group">
                            <label for="perfSubject">Subject</label>
                            <select id="perfSubject" class="form-control" required>
                                <option value="Mathematics">Mathematics</option>
                                <option value="Physics">Physics</option>
                                <option value="Chemistry">Chemistry</option>
                                <option value="Computer Science">Computer Science</option>
                                <option value="English">English</option>
                                <option value="Data Structures">Data Structures</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="perfType">Assessment Type</label>
                            <select id="perfType" class="form-control" required>
                                <option value="Quiz">Quiz</option>
                                <option value="Assignment">Assignment</option>
                                <option value="Midterm">Midterm</option>
                                <option value="Final Exam">Final Exam</option>
                                <option value="Project">Project</option>
                                <option value="Practical">Practical</option>
                            </select>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label for="perfScore">Score</label>
                                <input type="number" id="perfScore" class="form-control" min="0" required>
                            </div>
                            <div class="form-group">
                                <label for="perfMaxScore">Maximum Marks</label>
                                <input type="number" id="perfMaxScore" class="form-control" min="1" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="perfComments">Comments/Feedback</label>
                            <textarea id="perfComments" class="form-control" rows="3"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit Performance</button>
                    </form>
                </div>
                <!-- View Reports -->
                <!-- ... (rest of Faculty Portal HTML as you provided) ... -->
            </main>
        </div>
    </div>
    <!-- Student Portal -->
    <div id="studentPortal" class="page">
        <!-- Top Navigation -->
        <nav class="topnav">
            <div class="nav-content">
                <div class="nav-brand">Student Tracker - Student Portal</div>
                <button class="btn btn-secondary btn-sm" id="studentLogout">Logout</button>
            </div>
        </nav>
        <div class="portal-container">
            <!-- Sidebar and Main Content -->
            <!-- ... (rest of Student Portal HTML as you provided) ... -->
        </div>
    </div>
